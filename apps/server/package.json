{
  "name": "@lipy/server",
  "types": "src/types/index.d.ts",
  "scripts": {
    "env": "dotenv -e ../../.env --",
    "start": "bun run env -- bun build/index.js",
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./build --target bun --minify",
    "studio": "bun drizzle-kit studio --port 3001",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run db:generate && bun run env drizzle-kit migrate",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@aws-sdk/client-ses": "^3.787.0",
    "@aws-sdk/client-sns": "^3.787.0",
    "@aws-sdk/s3-request-presigner": "^3.787.0",
    "@hono/zod-validator": "^0.4.3",
    "better-auth": "^1.2.5",
    "bun": "^1.2.13",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.7.5",
    "ioredis": "^5.6.1",
    "kysely": "^0.27.6",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.2"
  },
  "packageManager": "bun@1.1.2",
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@types/bun": "latest",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.6"
  },
  "exports": {
    "./types/*": "./src/types/*"
  }
}
